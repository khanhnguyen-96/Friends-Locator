<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/linearLayout">
        <TextView
            android:text="@string/nickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="17sp"
            android:inputType="text"
            android:maxLength="10"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_save_nickname"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/save"
        android:src="@drawable/ic_save_white_24dp"
        android:padding="@dimen/fab_margin"/>

    <TextView
        android:id="@+id/tvAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/btn_save_nickname"
        android:layout_toStartOf="@+id/btn_save_nickname"
        android:ems="10"
        android:padding="10dp"
        android:text="@string/announcement"
        android:textAlignment="center"
        android:textColor="#0008ff"
        android:textSize="17sp" />
    <View android:id="@+id/line"
        style="@style/Divider"
        android:layout_below="@id/tvAnnouncement"/>

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:id="@+id/ll_gateway_settings"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/line">
        <TextView
            android:text="@string/ip_analyzer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_analyzer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="17sp"
            android:inputType="text"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_save_analyzer"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_gateway_settings"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/save"
        android:src="@drawable/ic_save_white_24dp"
        android:padding="@dimen/fab_margin"/>
</RelativeLayout>